{
  "name": "retro-vscode",
  "displayName": "retro-vscode",
  "description": "A suite of tools for developing on the SNES with support for the SuperFX chip.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:retroca65"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "retroca65",
        "filenames": [
          "Makefile"
        ],
        "extensions": [
          ".sgs",
          ".s"
        ]
      }
    ],
    "grammars": [
      {
        "language": "retroca65",
        "scopeName": "source.retroca65",
        "path": "./syntaxes/snes.json"
      }
    ],
    "configuration": {
      "title": "retroca65 configuration",
      "properties": {
        "wla.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}
